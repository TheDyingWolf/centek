@{
    ViewData["Title"] = "Overview";
}

@section Styles {
    <link rel="stylesheet" href="~/css/overview.css" asp-append-version="true" /> @* style for overview page *@
}

@model IEnumerable<Centek.Models.Payment>
@{
    ViewBag.Title = "Overview";
    var total = ViewBag.Total;
    var accounts = ViewBag.Accounts as List<Centek.Models.Account>;
    var mainCategories = ViewBag.MainCategories as List<Centek.Models.MainCategory>;
    var subCategories = ViewBag.SubCategories as List<Centek.Models.SubCategory>;

    var selectedAccountIds = ViewBag.SelectedAccountIds as List<int?> ?? new List<int?>();
    var selectedMainCategoryIds = ViewBag.SelectedMainCategoryIds as List<int?> ?? new List<int?>();
    var selectedSubCategoryIds = ViewBag.SelectedSubCategoryIds as List<int?> ?? new List<int?>();
    var selectedType = ViewBag.SelectedType?.ToString();

    var fromDate = ViewBag.FromDate as string;
    var toDate = ViewBag.ToDate as string;
}

<h1>@ViewBag.Title</h1>
<div>
    <p>Here you can see overview of your finances.</p>
</div>

<form method="get" class="mb-4">
    <div class="row g-3 align-items-end">
        <div class="col-md-2">
            <label class="form-label">Account</label>
            <select name="accountIds" class="form-control" multiple size="1">
                @foreach (var acc in accounts)
                {
                    if (selectedAccountIds.Contains(acc.ID))
                    {
                        <option value="@acc.ID" selected>@acc.Name</option>
                    }
                    else
                    {
                        <option value="@acc.ID">@acc.Name</option>
                    }
                }
            </select>
        </div>

        <div class="col-md-2">
            <label class="form-label">Main Category</label>
            <select name="mainCategoryIds" class="form-control" multiple size="1">
                @foreach (var cat in mainCategories)
                {
                    if (selectedMainCategoryIds.Contains(cat.ID))
                    {
                        <option value="@cat.ID" selected="selected">@cat.Name</option>
                    }
                    else
                    {
                        <option value="@cat.ID">@cat.Name</option>
                    }
                }
            </select>
        </div>

        <div class="col-md-2">
            <label class="form-label">Sub Category</label>
            <select name="subCategoryIds" class="form-control" multiple size="1">
                @foreach (var sub in subCategories)
                {
                    if (selectedSubCategoryIds.Contains(sub.ID))
                    {
                        <option value="@sub.ID" selected="selected">@sub.Name</option>
                    }
                    else
                    {
                        <option value="@sub.ID">@sub.Name</option>
                    }
                }
            </select>
        </div>

        <div class="col-md-2">
            <label class="form-label">Type</label>
            <select name="type" class="form-control">
                <option value="">All Types</option>
                @if (selectedType == "True")
                {
                    <option value="true" selected>Income</option>
                    <option value="false">Expense</option>
                }
                else if (selectedType == "False")
                {
                    <option value="true">Income</option>
                    <option value="false" selected>Expense</option>
                }
                else
                {
                    <option value="true">Income</option>
                    <option value="false">Expense</option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <label class="form-label">From</label>
            <input type="date" name="fromDate" value="@fromDate" class="form-control" />
        </div>

        <div class="col-md-2">
            <label class="form-label">To</label>
            <input type="date" name="toDate" value="@toDate" class="form-control" />
        </div>

        <div class="col-md-12 mt-3">
            <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
        </div>
    </div>
</form>
<div class="overview-charts-main">
    <div class="overview-chart-bar-container">
        <div class="overview-single-chart">
            <p>ACCOUNTS</p>
            <canvas id="accountChart" width="500" height="150"></canvas>
        </div>
    </div>
    <div class="overview-chart-pie-container">
        <div class="overview-single-chart">
            <p>MAIN CATEGORIES INCOME</p>
            <canvas id="mainCatChartPos"></canvas>
        </div>

        <div class="overview-single-chart">
            <p>MAIN CATEGORIES EXPENSE</p>
            <canvas id="mainCatChartNeg"></canvas>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctxAccounts = document.getElementById('accountChart').getContext('2d');
        const accountLabels = @Html.Raw(Json.Serialize(ViewBag.AccountLabels));
        const accountData = @Html.Raw(Json.Serialize(ViewBag.AccountValues));

        var barColors = [];
        for (var i = 0; i < accountData.length; i++) {
            barColors.push((accountData[i] > 0) ? "#00ff00" : "#ff0000");
        };

        new Chart(ctxAccounts, {
            type: 'bar',
            data: {
                labels: accountLabels,
                datasets: [{
                    label: 'Accounts',
                    data: accountData,
                    backgroundColor: barColors,
                    borderRadius: 8,
                    barThickness: 40
                }]
            },
            options: {
                responsive: false,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: { backgroundColor: '#222', padding: 10 }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: '#eee',
                            drawTicks: true,
                            drawBorder: true,
                            borderColor: '#000',
                            borderWidth: 2
                        },
                        ticks: { precision: 2 }
                    },
                    x: { grid: { display: false } }
                }
            }
        });


        // Main Categories Chart
        // INCOME
        const ctxMainCatPos = document.getElementById('mainCatChartPos');
        const posMainCatLabels = @Html.Raw(Json.Serialize(ViewBag.positiveMainCatLabels));
        const posMainCatData = @Html.Raw(Json.Serialize(ViewBag.positiveMainCatValues));

        new Chart(ctxMainCatPos, {
            type: 'pie',
            data: { labels: posMainCatLabels, datasets: [{ data: posMainCatData }] }
        });

        // EXPENSE
        const ctxMainCatNeg = document.getElementById('mainCatChartNeg');
        const negMainCatLabels = @Html.Raw(Json.Serialize(ViewBag.negativeMainCatLabels));
        const negMainCatData = @Html.Raw(Json.Serialize(ViewBag.negativeMainCatValues));

        new Chart(ctxMainCatNeg, {
            type: 'pie',
            data: { labels: negMainCatLabels, datasets: [{ data: negMainCatData }] }
        });

    </script>
}
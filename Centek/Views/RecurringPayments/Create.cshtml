@model Centek.Models.RecurringPayment

@{
    ViewData["Title"] = "Create";
    var Accounts = ViewBag.Accounts as List<Centek.Models.Account>;
    var MainCategories = ViewBag.MainCategories as List<Centek.Models.MainCategory>;
    var SubCategories = ViewBag.SubCategories as List<Centek.Models.SubCategory>;
}


<div class="row">
    <div class="col-md-4">
        <form id="createForm" asp-action="Create">
            <h1>Create New Recurring Payment</h1>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* name input *@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            @* Note input *@
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            @* Type input *@
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <div>
                    <div id="button-3" class="button r">
                        <input class="checkbox" type="checkbox" asp-for="Type">
                        <div class="knobs"></div>
                        <div class="layer"></div>
                    </div>
                </div>
            </div>
            @* Amount input *@
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            @* Start Date input *@
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            @* Start Date input *@
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecFrequency" class="control-label"></label>
                <select asp-for="RecFrequency" class="form-control"></select>
                <span asp-validation-for="RecFrequency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecInterval" class="control-label"></label>
                <input asp-for="RecInterval" class="form-control" />
                <span asp-validation-for="RecInterval" class="text-danger"></span>
            </div>
            @* Account dropdown *@
            <div class="form-group">
                <label asp-for="AccountId" class="control-label">Account</label>
                <select asp-for="AccountId" class="form-control">
                    <option value="">-- Select Account --</option>
                    @if (Accounts?.Any() == true)
                    {
                        @foreach (var acc in Accounts)
                        {
                            <option value="@acc.ID">@acc.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="AccountId" class="text-danger"></span>
            </div>

            @* Main Category dropdown *@
            <div class="form-group">
                <label asp-for="MainCategoryId" class="control-label">Main Category</label>
                <select asp-for="MainCategoryId" class="form-control" id="MainCategoryId">
                    <option value="">-- Select Main Category --</option>
                    @if (MainCategories?.Any() == true)
                    {
                        @foreach (var mc in MainCategories)
                        {
                            <option value="@mc.ID">@mc.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="MainCategoryId" class="text-danger"></span>
            </div>

            @* Subcategory dropdown *@
            <div class="form-group">
                <label asp-for="SubCategoryId" class="control-label">Sub Category</label>
                <select asp-for="SubCategoryId" class="form-control" id="SubCategoryId">
                    <option value="">-- Select Sub Category --</option>
                    @if (SubCategories?.Any() == true)
                    {
                        @foreach (var sc in SubCategories)
                        {
                            <option value="@sc.ID">@sc.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="SubCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Payments" asp-action="Index">Back to List</a>
</div>
@model Centek.Models.RecurringPayment

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Recurring Payment Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @(Model.Name ?? "NONE")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class="col-sm-10">
            @(Model.Note ?? "NONE")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @(Model.Type ? "INCOME" : "EXPENSE")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @(Model.EndDate.HasValue? Model.EndDate.Value.ToShortDateString() : "NONE")
        </dd>

        <dt class="col-sm-2">
            Recurring Frequency
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecFrequency)
        </dd>
        <dt class="col-sm-2">
            Recurring Interval
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecInterval)
        </dd>
        <dt class="col-sm-2">
            Account
        </dt>
        <dd class="col-sm-10">
            @(Model.Account?.Name ?? "NONE")
        </dd>
        <dt class="col-sm-2">
            Main Category
        </dt>
        <dd class="col-sm-10">
            @(Model.MainCategory?.Name ?? "NONE")
        </dd>
        <dt class="col-sm-2">
            Sub Category
        </dt>
        <dd class="col-sm-10">
            @(Model.SubCategory?.Name ?? "NONE")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-primary">Edit</a> |
    <a asp-controller="Payments" asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
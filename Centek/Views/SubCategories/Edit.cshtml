@model Centek.Models.SubCategory

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SubCategory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="MainCategoryId" class="control-label">Main Category</label>
                @* get list of Main Categories and set them in select form *@
                <select asp-for="MainCategoryId" class="form-control"
                    asp-items="@(ViewData["MainCategoryId"] as SelectList)">
                    <option value="">-- Select Main Category --</option>
                </select>
                <span asp-validation-for="MainCategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="MainCategories" asp-action="Index">Back to List</a>
</div>
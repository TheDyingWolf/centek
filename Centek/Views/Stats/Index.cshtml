@model IEnumerable<Centek.Models.Payment>
@{
    ViewData["Title"] = "Statistics";
    var total = ViewData["Total"];
    var accounts = ViewData["Accounts"] as List<Centek.Models.Account>;
    var mainCategories = ViewData["MainCategories"] as List<Centek.Models.MainCategory>;
    var subCategories = ViewData["SubCategories"] as List<Centek.Models.SubCategory>;
    var selectedAccountId = ViewData["SelectedAccountId"]?.ToString();
    var selectedMainCategoryId = ViewData["SelectedMainCategoryId"]?.ToString();
    var selectedSubCategoryId = ViewData["SelectedSubCategoryId"]?.ToString();
    var selectedType = ViewData["SelectedType"]?.ToString();
    var fromDate = ViewData["FromDate"] as string;
    var toDate = ViewData["ToDate"] as string;
}

@section Styles {
    <link rel="stylesheet" href="~/css/stats.css" asp-append-version="true" />
}

<div class="text-center mb-4">
    <h1 class="display-5 fw-bold">Here you can see your stats</h1>
</div>

<h3 class="mb-3">Payment Statistics</h3>

<form method="get" class="mb-4">
    <div class="row g-3 align-items-end">
        <div class="col-md-2">
            <label class="form-label">Account</label>
            <select name="accountId" class="form-control">
                <option value="">All Accounts</option>
                @foreach (var acc in accounts)
                {
                    if (selectedAccountId == acc.ID.ToString())
                    {
                        <option value="@acc.ID" selected="selected">@acc.Name</option>
                    }
                    else
                    {
                        <option value="@acc.ID">@acc.Name</option>
                    }
                }
            </select>
        </div>

        <div class="col-md-2">
            <label class="form-label">Main Category</label>
            <select name="mainCategoryId" class="form-control">
                <option value="">All Main Categories</option>
                @foreach (var cat in mainCategories)
                {
                    if (selectedMainCategoryId == cat.ID.ToString())
                    {
                        <option value="@cat.ID" selected="selected">@cat.Name</option>
                    }
                    else
                    {
                        <option value="@cat.ID">@cat.Name</option>
                    }
                }
            </select>
        </div>

        <div class="col-md-2">
            <label class="form-label">Sub Category</label>
            <select name="subCategoryId" class="form-control">
                <option value="">All Sub Categories</option>
                @foreach (var sub in subCategories)
                {
                    if (selectedSubCategoryId == sub.ID.ToString())
                    {
                        <option value="@sub.ID" selected="selected">@sub.Name</option>
                    }
                    else
                    {
                        <option value="@sub.ID">@sub.Name</option>
                    }
                }
            </select>
        </div>

        <div class="col-md-2">
            <label class="form-label">Type</label>
            <select name="type" class="form-control">
                <option value="">All Types</option>
                @if (selectedType == "True")
                {
                    <option value="true" selected>Income</option>
                    <option value="false">Expense</option>
                }
                else if (selectedType == "False")
                {
                    <option value="true">Income</option>
                    <option value="false" selected>Expense</option>
                }
                else
                {
                    <option value="true">Income</option>
                    <option value="false">Expense</option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <label class="form-label">From</label>
            <input type="date" name="fromDate" value="@fromDate" class="form-control" />
        </div>

        <div class="col-md-2">
            <label class="form-label">To</label>
            <input type="date" name="toDate" value="@toDate" class="form-control" />
        </div>

        <div class="col-md-12 mt-3">
            <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
        </div>
    </div>
</form>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Date</th>
            <th>Name</th>
            <th>Account</th>
            <th>Main Category</th>
            <th>Sub Category</th>
            <th>Amount (€)</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            var displayValue = p.Type ? p.Amount : -p.Amount;
            <tr class="@(p.Type ? "table-success" : "table-danger")">
                <td>@p.Date?.ToShortDateString()</td>
                <td>@p.Name</td>
                <td>@p.Account?.Name</td>
                <td>@p.MainCategory?.Name</td>
                <td>@p.SubCategory?.Name</td>
                <td>@string.Format("{0:N2} €", displayValue)</td>
                <td>@(p.Type ? "Income" : "Expense")</td>
            </tr>
        }
    </tbody>
</table>

<hr />
<h4 class="fw-bold">Total Balance: @string.Format("{0:N2} €", total)</h4>
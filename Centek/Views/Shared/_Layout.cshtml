<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Centek</title>

    @using Microsoft.AspNetCore.Identity
    @inject SignInManager<Centek.Models.User> SignInManager
    @inject UserManager<Centek.Models.User> UserManager

    <script type="importmap"></script>
    @* stylesheet imports *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Centek.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/loader.css" asp-append-version="true" /> @* style for loader *@
    @* only load auth.css when Identity page is on *@
    @if (Context.Request.Path.StartsWithSegments("/Identity"))
    {
        <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    }
    @* only load categories.css when Categories page is on *@
    @if (Context.Request.Path.StartsWithSegments("/Account"))
    {
        <link rel="stylesheet" href="~/css/accounts.css" asp-append-version="true" />
    }
    @if (Context.Request.Path.StartsWithSegments("/MainCategories") ||
        Context.Request.Path.StartsWithSegments("/SubCategories"))
    {
        <link rel="stylesheet" href="~/css/categories.css" asp-append-version="true" />
    }
    @* only load payments.css when Payments page is on *@
    @if (Context.Request.Path.StartsWithSegments("/Payments") ||
        Context.Request.Path.StartsWithSegments("/RecurringPayments"))
    {
        <link rel="stylesheet" href="~/css/payments.css" asp-append-version="true" />
    }
    @RenderSection("Styles", required: false)

    @* favicon imports *@
    <link rel="icon" type="image/x-icon" href="~/favicon/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon/favicon-16x16.png">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/centek_logotip.png" alt="Logo" width="32" height="32" />
                        Centek
                    </a>
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Welcome">
                        <img src="~/images/centek_logotip.png" alt="Logo" width="32" height="32" />
                        Centek
                    </a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* shows only when user is logged in *@
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                    asp-action="Overview">Overview</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Payments"
                                    asp-action="Index">Payments</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Accounts"
                                    asp-action="Index">Accounts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MainCategories"
                                    asp-action="Index">Categories</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="loader"></div>
    <div class="container">
        <main id="page-content" role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Centek - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @* loader script *@
    <script>
        $(window).on('load', function () {
            $('.loader').fadeOut("slow");
        });
    </script>
</body>

</html>
@model Centek.Models.ViewModels.PaymentsViewModel

@{
    ViewData["Title"] = "Payments";
}

<h1>Payments</h1>

<div id="header" style="display: flex; gap: 10px; align-items: center;">
    <a asp-action="Create" class="btn btn-primary">Create New Payment</a>
    <a asp-controller="RecurringPayments" asp-action="Create" class="btn btn-primary">Create New Recurring Payment</a>
</div>

<!-- Regular Payments Table -->
<h2>One-Time Payments</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Note</th>
            <th>Type</th>
            <th>Value</th>
            <th>Date</th>
            <th>Main Category</th>
            <th>Sub Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Payments)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Note</td>
                <td>@(item.Type ? "Income" : "Expense")</td>
                <td>@item.Value</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.MainCategory?.Name</td>
                <td>@item.SubCategory?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@* Recurring Payments Table *@
<h2>Recurring Payments</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Note</th>
            <th>Type</th>
            <th>Value</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Frequency</th>
            <th>Interval</th>
            <th>Main Category</th>
            <th>Sub Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RecurringPayments)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Mote</td>
                <td>@(item.Type ? "Income" : "Expense")</td>
                <td>@item.Value</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate?.ToShortDateString()</td>
                <td>@item.RecFrequency</td>
                <td>@item.RecInterval</td>
                <td>@item.MainCategory?.Name</td>
                <td>@item.SubCategory?.Name</td>
                <td>
                    <a asp-controller="RecurringPayments" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-controller="RecurringPayments" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-controller="RecurringPayments" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

</table>